<UserControl x:Class="IOExtensions.WPFApp.MultiStageDefaultProgressView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:IOExtensions.WPFApp"
             xmlns:view="clr-namespace:IOExtensions.View;assembly=IOExtensions.View"
             xmlns:view1="clr-namespace:IOExtensions.View"
             xmlns:reactive="clr-namespace:IOExtensions.Reactive;assembly=IOExtensions.Reactive"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>

        <reactive:ReactiveAsynExtract x:Key="Transferer1"></reactive:ReactiveAsynExtract>
        <reactive:ReactiveAsyncCopy x:Key="Transferer2"></reactive:ReactiveAsyncCopy>

        <x:Array x:Key="Arr" Type="{x:Type view:FileProgressView}">
            <view:FileProgressView   x:Name="FileProgressView1" 
                                     IsReadOnly="True" 
                                     ShowTransfer="False"
                                     Source = "..\\..\\..\\Data\\HFRR2020.7z"
                                     Destination = "..\\..\\..\\..\\Destination"
                                     Title="Unzipping"
                                     Transferer="{StaticResource Transferer1}"
            ></view:FileProgressView>

            <view:FileProgressView   x:Name="FileProgressView2" 
                                     IsReadOnly="True" 
                                     ShowTransfer="False"
                                     Source = "C:\\Users\\declan.taylor\\Downloads"
                                     Destination = "..\\..\\..\\bin\\Debug\\"
                                     Title="Copying"
                                     Transferer="{StaticResource Transferer2}"
            ></view:FileProgressView>
        </x:Array>

    </UserControl.Resources>
    <Grid>

        <view:MultiFileProgress ProgressViews="{Binding Source={StaticResource Arr}}"/>

        <DockPanel Visibility="Collapsed" x:Name="FileProgress2Panel">
            <StackPanel DockPanel.Dock="Top" Visibility="Hidden" x:Name="GridButton"  >
                <Button x:Name ="CloseButton"  Content="Close To Complete Update" Width="150" Height="30"  ></Button>
                <Button x:Name ="CancelButton"  Content="Cancel Close" Width="150" Height="30"  ></Button>
            </StackPanel>
        </DockPanel>

    </Grid>
</UserControl>
