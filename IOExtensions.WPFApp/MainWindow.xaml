<Window x:Class="IOExtensions.WPFApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:view="clr-namespace:IOExtensions.View;assembly=IOExtensions.View"
        mc:Ignorable="d"
        Title="SecondaryWindow" Height="450" Width="800">
    <TabControl>
        <TabItem Header="Secondary" HorizontalAlignment="Right" Margin="0" >
            <view:FileProgressControl x:Name="FileProgressView1" IsReadOnly="False" ShowTransfer="True"></view:FileProgressControl>
        </TabItem>

        <TabItem Header="Tertiary" HorizontalAlignment="Right" Margin="0" >
            <view:FileProgressControl x:Name="FileProgressView3" IsReadOnly="False" ShowTransfer="True"></view:FileProgressControl>
        </TabItem>

        <TabItem Header="Multi Stage" x:Name="MultiStage">
            <StackPanel Height="700" Width="1000">
                <Button x:Name="ShowDefault" Width="250" Height="40" Content="Show Multi Stage Default" Click="Show_Default_OnClick" Margin="20"></Button>
            </StackPanel>
        </TabItem>
    </TabControl>
</Window>
